    font-weight: 600;
    font-size: 1.8rem;
    color: white !important;
    text-decoration: none;
  }

  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 43px;
    height: 43px;
    border-radius: 12px;
    background: linear-gradient(135deg, #06beb6, #48b1bf);
    margin-right: 10px;
  }

  .top-section {
    display: flex;
    opacity: 0.9;
  }

  .links {
    display: flex;
    margin-left: 300px;
  }

  .quick-links ul li a {
    text-decoration: none;
    list-style-type: none;
    color: white;
    opacity: 0.9;
  }

  .quick-links ul li a:hover {
    color: white;
    opacity: 1;
  }

  .quick-links ul {
    list-style-type: none;
    line-height: 2rem;
    padding-left: 0px;
    margin-top: 1.3rem;
  }

  .support ul {
    list-style-type: none;
    line-height: 2rem;
    padding-left: 0px;
    margin-top: 1.3rem;
  }

  .support ul li a {
    text-decoration: none;
    list-style-type: none;
    color: white;
    opacity: 0.9;
    margin-left: 0px;
  }
  .support ul li a:hover {
    color: white;
    opacity: 1;
  }

  .links h4 {
    font-weight: 600;
  }

  .links .quick-links {
    margin-right: 100px;
  }
  .icon-wrapper i {
    color: white;
    font-size: 28px;
  }

  #description {
    margin-top: 28px;
    opacity: 0.9;
  }

  .contact-info {
    margin-top: 20px;
  }
  .contact-info i {
    margin-right: 10px;
  }

  .contact-info .icon {
    color: rgb(81, 173, 239);
  }

  .whole {
    display: flex;
    justify-content: space-between;
    padding-top: 30px;
  }

  .newsletter-form .email-input {
    padding: 7px 10px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: white;
    font-size: 0.9rem;
    outline: none;
    width: 190px;
    margin-top: 20px;
  }

  .subscribe-box input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .subscribe-btn {
    padding: 7px 10px;
    border: none;
    border-radius: 8px;
    background: #1da1f2;
    color: white;
    font-size: 0.9rem;
    font-weight: bold;

    margin-left: 14px;
  }

  .subscribe-btn:hover {
    opacity: 0.9;
    cursor: pointer;
  }

  .bottom-section {
    display: flex;
    justify-content: space-between;
    margin-top: 30px;
    opacity: 0.9;
  }
  .social-links a {
    margin-left: 20px;
    font-size: 18px;
    color: white;
    opacity: 0.7 !important;
  }
  .social-links a:hover {
    opacity: 1 !important;
    color: white;
  }

  /* responsive CSS for tablets (768px to 1024px): */

  @media (min-width: 768px) and (max-width: 1024px) {
    .brand {
      display: flex;
      justify-content: center;
    }
    .footer {
      padding: 40px 50px;
    }

    .top-section {
      flex-direction: column;
      gap: 40px;
    }

    .company-info {
      text-align: center;
    }

    #description {
      margin-top: 20px;
      font-size: 14px;
      line-height: 1.5;
    }

    .contact-info {
      margin-top: 15px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
    }

    .contact-info p {
      font-size: 14px;
      margin: 0;
    }

    .links {
      margin-left: 0;
      justify-content: center;
      gap: 80px;
    }

    .links h4 {
      text-align: center;
      font-size: 18px;
      margin-bottom: 15px;
    }

    .quick-links,
    .support {
      text-align: center;
    }

    .quick-links ul,
    .support ul {
      margin-top: 15px;
      line-height: 1.8rem;
    }

    .quick-links ul li a,
    .support ul li a {
      font-size: 14px;
    }

    .whole {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding-top: 25px;
    }

    .newsletter-section h4 {
      font-size: 18px;
      margin-bottom: 8px;
    }

    .newsletter-section p {
      font-size: 14px;
      margin-bottom: 15px;
    }

    .newsletter-form {
      display: flex;
      justify-content: center;
    }

    .newsletter-form .email-input {
      width: 200px;
      margin-top: 0;
      margin-right: 1rem;
    }

    .subscribe-btn {
      margin-left: 0;
      margin-top: 0;
    }

    .bottom-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 15px;
      margin-top: 25px;
    }

    .social-links a {
      margin: 0 15px;
    }
  }

  /* ------------------------------- */ /* ------------------------------- */ /* ------------------------------- */
  /* ------------------------------- */ /* ------------------------------- */ /* ------------------------------- */

  /* Mobile Responsive CSS - 576px and below */
  @media (max-width: 576px) {
    .footer {
      padding: 40px 20px 20px 20px;
    }

    .top-section {
      flex-direction: column;
      align-items: flex-start;
    }

    .company-info {
      width: 100%;
      margin-bottom: 30px;
    }

    .navbar-brand {
      font-size: 1.5rem;
    }

    .icon-wrapper {
      width: 38px;
      height: 38px;
      margin-right: 8px;
    }

    .icon-wrapper i {
      font-size: 22px;
    }

    #description {
      margin-top: 20px;
      font-size: 0.9rem;
      line-height: 1.5;
    }

    #description br {
      display: none;
    }

    .contact-info {
      margin-top: 15px;
    }

    .contact-info p {
      font-size: 0.9rem;
      margin-bottom: 8px;
    }

    .links {
      width: 100%;
      margin-left: 0;
      flex-direction: column;
      gap: 40px;
    }

    .links .quick-links {
      margin-right: 0;
      margin-bottom: 20px;
    }

    .links h4 {
      font-size: 1.1rem;
      margin-bottom: 10px;
    }

    .quick-links ul,
    .support ul {
      margin-top: 0.8rem;
      line-height: 1.8rem;
      /* margin-left: 10rem; */
    }

    .whole {
      flex-direction: column;
      padding-top: 20px;
      text-align: center;
    }

    .newsletter-section {
      margin-bottom: 20px;
    }

    .newsletter-section h4 {
      font-size: 1.1rem;
      margin-bottom: 8px;
    }

    .newsletter-section p {
      font-size: 0.9rem;
      margin-bottom: 15px;
    }

    .newsletter-form {
      width: 100%;
    }

    .newsletter-form form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .newsletter-form .email-input {
      width: 100%;
      max-width: 280px;
      padding: 12px 15px;
      margin-top: 0;
      font-size: 1rem;
      border-radius: 8px;
    }

    .subscribe-btn {
      width: 100%;
      max-width: 280px;
      padding: 12px 20px;
      margin-left: 0;
      font-size: 1rem;
      border-radius: 8px;
    }

    .bottom-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      margin-top: 20px;
      gap: 15px;
    }

    .copyright p {
      font-size: 0.8rem;
      margin-bottom: 10px;
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .social-links a {
      margin-left: 0;
      font-size: 20px;
      padding: 8px;
    }

    .footer hr {
      margin: 20px 0;
      opacity: 0.3;
    }
  }
</style>

<footer class="footer">
  <div class="top-section">
    <div class="company-info">
      <a class="navbar-brands d-flex align-items-center brand" href="/">
        <div class="icon-wrapper">
          <i class="fa-solid fa-globe"></i>
        </div>
        <span>stayNest</span>
      </a>

      <p id="description">
        Your trusted travel companion for discovering the world's <br />
        most incredible packages. We create unforgettable <br />
        experiences that inspire and transform.
      </p>

      <div class="contact-info">
        <p><i class="icon fas fa-envelope"></i>hello&#64;stayNest.com</p>
        <p><i class="icon fas fa-phone"></i> +91 1234567891</p>
        <p><i class="icon fas fa-map-marker-alt"></i>India</p>
      </div>
    </div>

    <div class="links">
      <div class="quick-links">
        <h4>Links For You</h4>
        <ul>
          <li><a href="/listings">Home</a></li>
          <li><a href="/packages">Travel Packages</a></li>
          <li><a routerLink="/about-us">About Us</a></li>
          <li><a routerLink="/contact-us">Contact Us</a></li>
        </ul>
      </div>

